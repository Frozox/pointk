{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-2"></div>
        <main class="col-sm-8">
            <div class="row">
                <div class="col-sm-12 p-5">
                    <form method="post">
                        <h1 class="m-b-5 text-center"><img style="vertical-align: inherit;" src="/images/logo-site.png" width="75px">Connexion</h1>
                        <hr>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-check pb-2">
                            <input type="checkbox" name="_remember_me" class="form-check-input">Se souvenir de moi
                        </div>
                        <div class="pb-3">
                            <a href="{{ path('recover') }}">Mot de passe oubli√© ?</a>
                        </div>
                        <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
